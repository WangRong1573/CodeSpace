<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.bj.controller.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user/add</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>show</servlet-name>
        <servlet-class>com.bj.controller.ShowUsersServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UserDeleteServlet</servlet-name>
        <servlet-class>com.bj.controller.UserDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserLoginServlet</servlet-name>
        <servlet-class>com.bj.controller.UserLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserDeleteServlet</servlet-name>
        <url-pattern>/user/delete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>show</servlet-name>
        <url-pattern>/user/show</url-pattern>
    </servlet-mapping>

<!--    设置访问网站时的默认页面：欢迎页-->
    <welcome-file-list>
<!--        Servlet资源文件作为默认欢迎资源时，写别名路径，但是需要将开头的“/”去掉-->
<!--        <welcome-file>user/show</welcome-file>-->
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
</web-app>